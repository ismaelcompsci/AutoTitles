{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared"
  ],
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "types": [
      "electron-vite/node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}